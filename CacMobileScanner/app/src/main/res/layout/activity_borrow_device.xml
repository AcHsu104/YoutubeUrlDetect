<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
            android:padding="10dp"
            android:id="@+id/device_id_layout"
            layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/assets_id_text"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
            android:padding="10dp"
            app:layout_constraintEnd_toStartOf="@+id/employee_id_select_button"
            app:layout_constraintStart_toStartOf="@+id/device_id_layout"
            app:layout_constraintTop_toBottomOf="@+id/device_id_layout"
            android:id="@+id/employee_id_layout"
            layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/employee_id_text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
            android:textStyle="bold"
            android:text="select"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toTopOf="@+id/employee_id_layout"
            app:layout_constraintBottom_toBottomOf="@+id/employee_id_layout"
            android:id="@+id/employee_id_select_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>